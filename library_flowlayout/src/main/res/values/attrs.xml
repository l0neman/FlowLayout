<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!--形状遮罩-->
    <declare-styleable name="MaskedImageView">
        <attr name="center" format="boolean" />
        <attr name="mask_mode">
            <enum name="shader" value="0" />
            <enum name="xfermode" value="1" />
        </attr>
    </declare-styleable>
</resources>